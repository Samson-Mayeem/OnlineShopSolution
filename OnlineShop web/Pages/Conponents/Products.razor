@page "/"
@inherits ProductsBase

@if(Products == null)
{
    <h3>Loading products ...</h3>
}
else
{
    <h3 class = "mb-5"> Products </h3>
    var productsCount = Products.Count();
    @if(productsCount > 0)
    {
        const int productPerRow = 4;
        var products = new List<ProductDto>();    
        @for( int i = 0; i < productsCount; i++)
        {
            products = Products.Skip(i * productPerRow).Take(productPerRow).ToList();
        
            <div class="col-md-3 ">
                @foreach(var prod in products)
                {
                    <div class="col-md-4 mb-2">
                        <a href="#">
                            <div class="card">
                                <img class="img-thumbnail" src="@prod.ImageURL"/>
                                <div class="card-body">
                                    <h5 class="card-title mb-3">
                                        @prod.Name
                                    </h5>
                                    <p class="card-text">
                                        <b>@prod.Price</b>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }        
    }
}


